const frontend = [
  {
    icon: Nextjs,
    link: "https://nextjs.org/",
  },
  {
    icon: React,
    class: "text-[#00D8FF]",
    link: "https://react.dev/",
  },
  {
    icon: Angular,
    class: "text-[#C4473A]",
    link: "https://angular.dev/",
  },
];

const backend = [
  {
    icon: Express,
    class: "text-[#000]",
    link: "https://expressjs.com/",
  },
  {
    icon: Nestjs,
    class: "text-[#DF234F]",
    link: "https://nestjs.com/",
  },
  {
    icon: Spring,
    link: "https://spring.io/",
  },
];

const databases = [
  {
    icon: Postgresql,
    class: "text-[#336791]",
