    <Separator orientation="vertical" className="hidden md:block h-20" />
  </div>
  <TechSkillItem title="Back-End" icons={backend} />
  <TechSkillItem class="mt-5 md:col-span-3 [&>div]:flex [&>div]:items-center [&>div]:md:justify-between" title="Bases de datos" icons={databases} />
